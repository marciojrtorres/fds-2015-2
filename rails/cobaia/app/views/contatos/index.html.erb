<h1>Contatos cadastrados</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Endereco</th>
      <th>Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contatos.each do |contato| %>
      <tr>
        <td><%= contato.nome %></td>
        <td><%= contato.endereco %></td>
        <td><%= contato.telefone %></td>
        <td><%= link_to 'Ver', contato %></td>
        <td><%= link_to 'Editar', edit_contato_path(contato) %></td>
        <td><%= link_to 'Excluir', contato, method: :delete, data: { confirm: 'Confirma exclusÃ£o?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

