      <%= image_tag e.imagem(:thumb) %>
      <p><%= e.resumo %></p>
      <p>
        <a href="#">
           Mais detalhes
        </a>
      </p>
    </div>
    <% end %>
  </div>

  <hr>

  <footer>
    <p>&copy; Company 2014</p>
  </footer>
</div> <!-- /container -->
